<?xml version="1.0" encoding="ISO-8859-1"?>
<dds xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://community.rti.com/schema/6.0.0/rti_persistence_service.xsd">

    <persistence_service name="rti-shapes-demo">

        <administration>
            <domain_id>0</domain_id>
            <distributed_logger>
                <enabled>false</enabled>
                <echo_to_stdout>true</echo_to_stdout>
            </distributed_logger>
            <participant_qos base_name="QosLibrary::Base"/>
        </administration>

        <persistent_storage>
            <filesystem>
                <directory>$(NDDS_PERSISTENCE_DIRECTORY)</directory>
            </filesystem>
        </persistent_storage>

        <participant name="Default">

            <domain_id>0</domain_id>

            <persistence_group name="DefaultShapes">
                <filter>Square,Circle,Triangle</filter>
                <single_publisher>true</single_publisher>
                <single_subscriber>true</single_subscriber>
                <datawriter_qos base_name="QosLibrary::Base">
                    <reliability>
                        <kind>RELIABLE_RELIABILITY_QOS</kind>
                    </reliability>
                </datawriter_qos>
                <datareader_qos base_name="QosLibrary::Base">
                    <reliability>
                        <kind>RELIABLE_RELIABILITY_QOS</kind>
                    </reliability>
                </datareader_qos>
            </persistence_group>

        </participant>

    </persistence_service>

</dds>
